<!DOCTYPE html>
<html lang="en" data-theme="forest">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <title>Climate Solutions</title>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container mx-auto">
      <div class="hero bg-base-200 py-6">
        <div class="hero-content text-center">
          <div class="max-w-lg">
            <h1 class="text-5xl font-bold"><%= project.title %></h1>
            <p class="py-6">
              "Below, you will find detailed information about the project: <%=
              project.title %>
            </p>
          </div>
        </div>
      </div>
      <br />
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <img
            class="w-full rounded-lg"
            src="<%= project.feature_img_url %>"
            alt="<%= project.title %>"
          />
        </div>
        <div class="prose">
          <p><%= project.intro_short %></p>

          <p>
            <strong>Impact:</strong><br />
            <%= project.impact %>
          </p>
          <p>
            <strong>More Information:</strong><br />
            <a href="<%= project.original_source_url %>" target="_blank"
              ><%= project.original_source_url %></a
            >
          </p>
          <p id="quote"></p>
          <a
            href="#"
            onclick="history.back(); return false;"
            class="btn btn-soft btn-success btn-sm no-underline"
            >RETURN</a
          >
        </div>
      </div>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        fetch("https://dummyjson.com/quotes/random")
          .then((response) => response.json())
          .then((data) => {
            const container = document.getElementById("quote");
            container.innerHTML = `<figure><blockquote>"${data.quote}"</blockquote><figcaption>â€” ${data.author}</figcaption></figure>`;
          })
          .catch((error) => {
            console.error("Error fetching quote:", error);
          });
      });
    </script>
  </body>
</html>
